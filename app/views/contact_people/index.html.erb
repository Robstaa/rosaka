<%- model_class = ContactPerson -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:pharmacy_id) %></th>
      <th><%= model_class.human_attribute_name(:salutation) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:first_name) %></th>
      <th><%= model_class.human_attribute_name(:last_name) %></th>
      <th><%= model_class.human_attribute_name(:name_addition) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @contact_people.each do |contact_person| %>
      <tr>
        <td><%= link_to contact_person.id, contact_person_path(contact_person) %></td>
        <td><%= contact_person.pharmacy_id %></td>
        <td><%= contact_person.salutation %></td>
        <td><%= contact_person.title %></td>
        <td><%= contact_person.first_name %></td>
        <td><%= contact_person.last_name %></td>
        <td><%= contact_person.name_addition %></td>
        <td><%=l contact_person.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      contact_person_path(contact_person), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_contact_person_path(contact_person), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      contact_person_path(contact_person),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_contact_person_path,
            :class => 'btn btn-primary' %>
