<p id="notice"><%= notice %></p>

<h1>Contact People</h1>

<table>
  <thead>
    <tr>
      <th>Pharmacy</th>
      <th>Salutation</th>
      <th>Title</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Name addition</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contact_people.each do |contact_person| %>
      <tr>
        <td><%= contact_person.pharmacy %></td>
        <td><%= contact_person.salutation %></td>
        <td><%= contact_person.title %></td>
        <td><%= contact_person.first_name %></td>
        <td><%= contact_person.last_name %></td>
        <td><%= contact_person.name_addition %></td>
        <td><%= link_to 'Show', contact_person %></td>
        <td><%= link_to 'Edit', edit_contact_person_path(contact_person) %></td>
        <td><%= link_to 'Destroy', contact_person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

