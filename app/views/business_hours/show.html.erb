<%- model_class = BusinessHour -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:pharmacy_id) %>:</strong></dt>
  <dd><%= @business_hour.pharmacy_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:day) %>:</strong></dt>
  <dd><%= @business_hour.day %></dd>
  <dt><strong><%= model_class.human_attribute_name(:open_time) %>:</strong></dt>
  <dd><%= @business_hour.formatted_open_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:close_time) %>:</strong></dt>
  <dd><%= @business_hour.formatted_close_time %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              business_hours_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_business_hour_path(@business_hour), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              business_hour_path(@business_hour),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>