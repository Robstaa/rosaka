<%- model_class = BusinessHour -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:pharmacy_id) %></th>
      <th><%= model_class.human_attribute_name(:day) %></th>
      <th><%= model_class.human_attribute_name(:open_time) %></th>
      <th><%= model_class.human_attribute_name(:close_time) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @business_hours.each do |business_hour| %>
      <tr>
        <td><%= link_to business_hour.id, business_hour_path(business_hour) %></td>
        <td><%= business_hour.pharmacy_id %></td>
        <td><%= business_hour.day %></td>
        <td><%= business_hour.formatted_open_time %></td>
        <td><%= business_hour.formatted_close_time %></td>
        <td><%=l business_hour.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      business_hour_path(business_hour), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_business_hour_path(business_hour), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      business_hour_path(business_hour),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_business_hour_path,
            :class => 'btn btn-primary' %>
