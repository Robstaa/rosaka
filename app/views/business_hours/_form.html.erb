<%= form_for business_hour, url: pharmacy_business_hour_path(pharmacy, business_hour), :html => { :class => "form-horizontal business_hour" } do |f| %>

  <% if business_hour.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(business_hour.errors.count, "error") %> prohibited this business_hour from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% business_hour.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :day, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :day, BusinessHour.days.keys, :class => 'form-control' %>
    </div>
    <%=f.error_span(:day) %>
  </div>
  <div class="form-group">
    <%= f.label :open_time, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.time_field :open_time, :class => 'form-control' %>
    </div>
    <%=f.error_span(:open_time) %>
  </div>
  <div class="form-group">
    <%= f.label :close_time, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.time_field :close_time, :class => 'form-control' %>
    </div>
    <%=f.error_span(:close_time) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
    </div>
  </div>

<% end %>
