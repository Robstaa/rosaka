<%= form_for @pharmacy, :html => { :class => "form-horizontal pharmacy" } do |f| %>

  <% if @pharmacy.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@pharmacy.errors.count, "error") %> prohibited this pharmacy from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @pharmacy.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :street_name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :street_name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:street_name) %>
  </div>
  <div class="form-group">
    <%= f.label :house_number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :house_number, :class => 'form-control' %>
    </div>
    <%=f.error_span(:house_number) %>
  </div>
  <div class="form-group">
    <%= f.label :postal_code, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :postal_code, :class => 'form-control' %>
    </div>
    <%=f.error_span(:postal_code) %>
  </div>
  <div class="form-group">
    <%= f.label :cent_cost_per_phone_call, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :cent_cost_per_phone_call, :class => 'form-control' %>
    </div>
    <%=f.error_span(:cent_cost_per_phone_call) %>
  </div>
  <div class="form-group">
    <%= f.label :fax_number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :fax_number, :class => 'form-control' %>
    </div>
    <%=f.error_span(:fax_number) %>
  </div>
  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
    <%=f.error_span(:email) %>
  </div>
  <div class="form-group">
    <%= f.label :website, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :website, :class => 'form-control' %>
    </div>
    <%=f.error_span(:website) %>
  </div>
  <div class="form-group">
    <%= f.label :service_number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :service_number, :class => 'form-control' %>
    </div>
    <%=f.error_span(:service_number) %>
  </div>
  <div class="form-group">
    <%= f.label :facebook_profile, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :facebook_profile, :class => 'form-control' %>
    </div>
    <%=f.error_span(:facebook_profile) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                pharmacies_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
